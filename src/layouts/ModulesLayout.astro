---
import Layout from './Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { moduleCategories } from '../i18n/modules';

interface Props {
  title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('nav.modules')}>
  <main class="page-content">
    <div class="modules-container">
      <aside class="modules-sidebar">
        <h2 class="sidebar-title" data-i18n-key="modules_menu.title">{t('modules_menu.title')}</h2>
        <nav>
          <ul>
            {
              moduleCategories.map((category) => (
                <li>
                  <a href={`/modulos/${category.slug}`}>
                    {t(category.nameKey)}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </aside>
      <section class="modules-content">
        <h1>{title}</h1>
        <slot />
      </section>
    </div>

  </main>

<script>
  document.addEventListener('astro:page-load', () => {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('.modules-sidebar nav a');
    
    navLinks.forEach(link => {
      const linkPath = link.getAttribute('href');
      if (linkPath === currentPath) {
        link.classList.add('active');
      }
    });
  });
</script>

<style>
  .page-content {
    max-width: 1200px; /* Increased max-width for sidebar layout */
    margin: 2rem auto;
    padding: 2rem;
    color: var(--color-text);
    display: flex; /* Enable flexbox for sidebar layout */
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
    flex-wrap: wrap; /* Allow content to wrap on smaller screens */
    gap: 2rem; /* Space between sidebar and content */
  }

  h1 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
    width: 100%; /* Ensure h1 spans full width */
  }

  .modules-container {
    display: flex;
    width: 100%;
    gap: 2rem;
    flex-wrap: wrap; /* Allow sidebar and content to wrap */
  }

  .modules-sidebar {
    flex: 0 0 250px; /* Fixed width for sidebar */
    background-color: #2a2a2a;
    border: 1px solid #444;
    border-radius: 8px;
    padding: 1.5rem;
    height: fit-content; /* Adjust height to content */
  }

  .sidebar-title {
    font-family: var(--font-family-headings);
    color: var(--color-primary);
    font-size: 1.8rem;
    margin-top: 0;
    margin-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-accent-1);
    padding-bottom: 0.5rem;
  }

  .modules-sidebar nav ul {
    list-style: none;
    padding: 0;
  }

  .modules-sidebar nav li {
    margin-bottom: 0.75rem;
  }

  .modules-sidebar nav a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 1.1rem;
    display: block;
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    transition: background-color 0.2s ease-in-out;
  }

  .modules-sidebar nav a:hover {
    background-color: var(--color-accent-1);
    color: #1a1a1a;
  }

  .modules-sidebar nav a.active {
    color: #ffffff;
    font-weight: bold;
    background-color: var(--color-accent-1);
  }

  .modules-content {
    flex: 1; /* Take remaining space */
    background-color: #333;
    border: 1px solid #444;
    border-radius: 8px;
    padding: 2rem;
  }

  .modules-content h2 {
    font-family: var(--font-family-headings);
    color: var(--color-accent-1);
    font-size: 2rem;
    margin: 0 0 1rem 0;
  }

  .modules-content p {
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  /* Media query for smaller screens */
  @media (max-width: 768px) {
    .page-content, .modules-container {
      flex-direction: column;
    }
    .modules-sidebar {
      flex: none; /* Remove fixed width on small screens */
      width: 100%;
    }
  }
</style>