---
import Layout from "./Layout.astro";
import { useTranslations } from "../i18n/utils";
import { getEntry } from "astro:content";
import { ui } from "../i18n/ui";

interface Props {
  lang: keyof typeof ui;
  entryId: string;
}

const { lang, entryId } = Astro.props;

const t = useTranslations(lang);

const entry = await getEntry("support", entryId);

if (!entry) {
  throw new Error(`Support file with path ${entryId} not found.`);
}

const { Content } = await entry.render();
---

<Layout title={t("nav.support")}>
  <main class="page-content">
    <h1 data-i18n-key="nav.support">{t("nav.support")}</h1>
    <div class="markdown-content">
      <Content />
    </div>
  </main>
</Layout>

<style>
  .page-content {
    max-width: 900px;
    margin: 2rem auto;
    padding: 2rem;
    color: var(--color-text);
  }

  h1 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
  }

  .markdown-content :global(h2) {
    font-family: var(--font-family-headings);
    color: var(--color-accent-1);
    font-size: 2rem;
    margin-top: 4rem;
    margin-bottom: 2rem;
    border-bottom: 2px solid #444;
    padding-bottom: 0.5rem;
  }

  .markdown-content :global(h3) {
    font-family: var(--font-family-headings);
    color: var(--color-accent-2);
    font-size: 1.5rem;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .markdown-content :global(p) {
    line-height: 1.8;
    margin-bottom: 1.2rem;
    font-size: 1.05rem;
  }

  .markdown-content :global(ul) {
    list-style: disc;
    padding-left: 1.8rem;
    margin-bottom: 1.5rem;
  }

  .markdown-content :global(li) {
    margin-bottom: 0.8rem;
    line-height: 1.7;
  }

  .markdown-content :global(strong) {
    color: var(--color-accent-1);
    font-weight: 600;
  }

  .markdown-content :global(a) {
    color: var(--color-accent-2);
  }

  /* ===== RESPONSIVE MÃ“VILES ===== */
  @media (max-width: 768px) {
    .page-content {
      margin: 1rem auto;
      padding: 1.5rem;
    }
    h1 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
    .markdown-content :global(h2) {
      font-size: 1.6rem;
      margin-top: 2.5rem;
    }
    .markdown-content :global(h3) {
      font-size: 1.3rem;
      margin-top: 2rem;
    }
  }

  @media (max-width: 480px) {
    .page-content {
      margin: 0.5rem auto;
      padding: 1rem;
    }
    h1 {
      font-size: 1.6rem;
      margin-bottom: 1.5rem;
    }
    .markdown-content :global(h2) {
      font-size: 1.4rem;
      margin-top: 2rem;
    }
    .markdown-content :global(h3) {
      font-size: 1.2rem;
      margin-top: 1.5rem;
    }
    .markdown-content :global(p) {
      font-size: 1rem;
      line-height: 1.7;
    }
    .markdown-content :global(li) {
      margin-bottom: 0.6rem;
    }
  }
</style>