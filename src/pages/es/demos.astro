---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('nav.demos') + " - ModuGal"}>
  <div class="page-content">
    <h1 data-i18n-key="nav.demos">{t('nav.demos')}</h1>
    <p data-i18n-key="under_construction">{t('under_construction')}</p>
    <a href="/" data-i18n-key="back_to_home">{t('back_to_home')}</a>
  </div>
</Layout>

<style>
  .page-content {
    text-align: center;
  }
  a {
    color: var(--color-accent-1);
  }
</style>