---
import ModulesLayout from '../../layouts/ModulesLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<ModulesLayout title={t('module_group.initial_base_modules')}>
    <article class="module-card">
      <h2 class="module-title">Keyboard</h2>
      <p class="module-subtitle" data-i18n-key="keyboard.subtitle"></p>
      
      <p class="module-description" data-i18n-key="keyboard.description"></p>
      
      <div class="module-details">
        <div class="module-section">
          <h3 data-i18n-key="keyboard.parameters_title"></h3>
          <ul>
            <li><strong>Octave:</strong> <span data-i18n-key="keyboard.parameters.octave"></span></li>
            <li><strong>Glide:</strong> <span data-i18n-key="keyboard.parameters.glide"></span></li>
          </ul>
        </div>

        <div class="module-section io-section">
          <div>
            <h3 data-i18n-key="keyboard.outputs_title"></h3>
            <ul>
              <li><strong>CV:</strong> <span data-i18n-key="keyboard.outputs.cv"></span></li>
              <li><strong>Gate:</strong> <span data-i18n-key="keyboard.outputs.gate"></span></li>
            </ul>
          </div>
        </div>
      </div>
    </article>

    <article class="module-card">
      <h2 class="module-title">Output</h2>
      <p class="module-subtitle" data-i18n-key="output.subtitle"></p>
      
      <p class="module-description" data-i18n-key="output.description"></p>
      
      <div class="module-details">
        <div class="module-section io-section">
          <div>
            <h3 data-i18n-key="output.inputs_title"></h3>
            <ul>
              <li><strong>In:</strong> <span data-i18n-key="output.inputs.in"></span></li>
            </ul>
          </div>
        </div>
      </div>
    </article>
</ModulesLayout>